<% if flash.any? %>
<% flash.each do |type, msg| %>
  <div class="alert alert-<%= type %> text-center">
    <%= msg %>
  </div>
<% end %>
<% end %>

<%= form_for [@user, @post], url: user_post_path, method: :post do |f| %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>  

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <%= f.label :file %>
  <%= f.file_field :file %>

  <%= f.submit 'Make Post' %>
<% end %>
