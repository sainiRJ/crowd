<h1>Users</h1>

<%= form_tag(user_search_path, method: "get", class: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search users..." %>
  <%= submit_tag "Search" %>
<% end %>

<section class="vh-100" style="background-color: #9de2ff;">
    <div class="container py-5 h-100">
        <% @users.each do |user| %>
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-md-9 col-lg-7 col-xl-5">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-4">
              <div class="d-flex text-black">
                <% @profile.each do |profile| %>
                    <% if profile.user_id == user.id %>
                <div class="flex-shrink-0">
                  <img src=<%= profile.profile_photo %>
                    alt="Generic placeholder image" class="img-fluid"
                    style="width: 180px; border-radius: 10px; height: 160px">
                </div>
                <% end %>
                <% end %>
                <div class="flex-grow-1 ms-3">
                  <h5 class="mb-1"><%= user.name %></h5>
                  <p class="mb-2 pb-1" style="color: #2b2a2a;"><%= user.email %></p>
                  <div class="d-flex justify-content-start rounded-3 p-2 mb-2"
                    style="background-color: #efefef;">
                    <div>
                      <p class="small text-muted mb-1">Articles</p>
                      <p class="mb-0">41</p>
                    </div>
                    <div class="px-3">
                      <p class="small text-muted mb-1">Followers</p>
                      <p class="mb-0">976</p>
                    </div>
                    <div>
                      <p class="small text-muted mb-1">Rating</p>
                      <p class="mb-0">8.5</p>
                    </div>
                  </div>
                  <div class="d-flex pt-1">
                    <button type="button" class="btn btn-outline-primary me-1 flex-grow-1">Chat</button>
                    <button type="button" class="btn btn-primary flex-grow-1">Follow</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </section>
